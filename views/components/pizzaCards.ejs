<% pizzas.forEach(function(pizza){%>
    <div class="w-64">
        <img class="h-40 mb-4 mx-auto" src="/img/<%= pizza.image%>" alt="">
        <div class="text-center">
            <h2 class="mb-4 text-lg capitalize"><%= pizza.name%></h2>
            <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= pizza.size%></span>
            <div class="flex items-center justify-around mt-6">
                <span class="font-bold text-lg">â‚¹<%= pizza.price%></span>
                <button class="add-to-cart rounded-full py-1 px-6 flex items-center font-bold" data-pizza="<%= JSON.stringify(pizza)%>" >
                    <span class="mr-4">+</span>
                    <span class="capitalize">add</span>
                </button>
            </div>
        </div>
    </div>
<%})%>