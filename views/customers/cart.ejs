<section class="cart py-16">
    <% if(session.cart) {%>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="black-color-cart-png">
            <h1 class="font-bold ml-4 text-2xl">order summary</h1>
        </div>
        <%- include('../components/purchasePizza.ejs') %>
        <hr>
        <div class="text-right py-4">
            <div class="mb-4">
                <span class="capitalize text-lg font-bold">total amount:</span>
                <span class="font-bold text-2xl amount ml-2">â‚¹<%= session.cart.totalPrice %></span>
            </div>
            <% if(user){%>
                <div class="">
                    <form action="/orders" method="post">
                        <input type="text" name="phone" id="" class="border border-gray-400 p-2 pl-4 mb-2 rounded-full w-1/2" placeholder="Phone Number">
                        <input type="text" name="address" id="" class="border border-gray-400 p-2 pl-4 mb-2 rounded-full w-1/2" placeholder="Address">
                        <div class="">
                            <button type="submit" class="btn-primary px-6 py-2 text-white rounded-full font-bold mt-6 capitalize">order now</button>
                        </div>
                    </form>
                </div>
            <% } else { %>
                <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 text-white rounded-full font-bold mt-6">Login to contiue</a>
            <% } %>
        </div>
    </div>
    <% }else{ %>
    <div class="empty-cart ">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 capitalize">cart empty</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.<br />To order a pizza, go to the main page.</p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart-png">
            <a class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 capitalize" href="/">go back</a>
        </div>
    </div>
    <%}%>
</section>